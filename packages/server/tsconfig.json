{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["node", "vite"]
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonJS"
    },
    "include": ["src/**/*.ts"]
  }
}
